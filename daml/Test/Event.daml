              action = ActionEnum_New
              eventDate = D.date 2019 Sep 30
              eventIdentifier =
                [ Identifier with
                  id = None
                  issuer = None
                  issuerReference = None
                  assignedIdentifier =
                    [ AssignedIdentifier with
                        identifier = fieldWithEmptyMeta "Novation"
                        version = Some 1
                    ]
                ]
  let contractNew = buildCds 20000000.0 (d02_2, c04_4) [(1, "AGEZTVDH")]

  -- Execution
