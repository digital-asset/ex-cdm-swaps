  -- Novation data
  d02_2 <- d02_2
  c04_4 <- c04_4
  let p3 = PartyWithId with p = d02_2.damlParty, id = d02_2.partyId
  let p4 = PartyWithId with p = c04_4.damlParty, id = c04_4.partyId
